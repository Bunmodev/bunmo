---
import { ClientRouter } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import '../styles/global.css'

const { pageTitle, pageDescription, author, tags = [], image, imageAlt } = Astro.props;
const siteUrl = "https://bunmodev.netlify.app"; // Replace with your actual site URL
const pageUrl = siteUrl + Astro.url.pathname;

// More robust image URL handling that checks if image is a string first
let ogImage = siteUrl + "/og-image.png"; // Default fallback

if (image) {
  // Check if image is a string and then check if it starts with http
  if (typeof image === 'string') {
    ogImage = image.startsWith('http') ? image : siteUrl + image;
  } else if (image.url) {
    // Handle case where image is an object with url property
    ogImage = image.url.startsWith('http') ? image.url : siteUrl + image.url;
  }
  // If image is neither a string nor has a url property, we keep the default
}
---

<!doctype html>
<html lang="en" data-theme="bloglight">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={author} />
    <meta name="keywords" content={tags.join(", ")} />
    <meta name="description" content={pageDescription} />
    <meta name="robots" content="index, follow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="alternate" type="application/rss+xml" title="BunmoDev RSS Feed" href="/rss.xml">
    
    <!-- Canonical URL -->
    <link rel="canonical" href={pageUrl} />
    
    <!-- âœ… Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content={imageAlt || "Blog image"} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    
    <title>{pageTitle}</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main class="p-4 min-h-screen font-body">
      <slot />
    </main>
    <Footer />
  </body>
</html>